import cv2

# Read image (BGR format by default)
img = cv2.imread("image.jpg")  

# Convert to grayscale (1 line)
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)  

# Blur image (Gaussian Blur)
blur = cv2.GaussianBlur(img, (5, 5), 0)  

# Edge detection (Canny)
edges = cv2.Canny(blur, 50, 150)  

# Thresholding (Binary)
_, thresh = cv2.threshold(gray, 127, 255, cv2.THRESH_BINARY)  

# Save processed image
cv2.imwrite("processed.jpg", edges)  

# Display images (combo)
cv2.imshow("Original vs Processed", cv2.hconcat([img, cv2.cvtColor(edges, cv2.COLOR_GRAY2BGR)]))  
cv2.waitKey(0)  
cv2.destroyAllWindows()
